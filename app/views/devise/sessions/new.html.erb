<p class="login-box-msg"><%= t('faalis.sign_in') %></p>
<% flash.each do |name, msg| %>
  <div class="alert alert-danger" role='alert'><i class="fa fa-warning"></i> <%= msg %></div>
<%- end -%>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div class="form-group has-feedback <% if resource.errors[:email] -%>has-error<% end %>">
    <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder=>t("faalis.email") %>
    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
  </div>

  <div class="form-group has-feedback <% if resource.errors[:password] -%>has-error<% end %>">
    <%= f.password_field :password, :class => "form-control", :placeholder=>t("faalis.password") %>
    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
  </div>


  <div class="row">
    <% if devise_mapping.rememberable? -%>
    <div class="col-xs-8">
      <div class="checkbox icheck">
        <label>
          <%= f.check_box :remember_me, :class=>"checkbox" %> <%= t('faalis.remember_me') %>
        </label>
      </div>
    </div><!-- /.col -->
    <% end %>
    <div class="col-xs-4">
      <button type="submit" id="sign_in" class="btn btn-primary btn-block btn-flat"><%= t('faalis.sign_in') %></button>
    </div><!-- /.col -->
  </div>
</form>

<%= render "devise/shared/omni_link" %>

<%= render "devise/shared/links" %>
<% end %>
