<div class="form-box" id="login-box">
  <div class="header"><%= t("faalis.sign_up") %></div>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

    <div class="body bg-gray">
      <% unless resource.errors.empty? %>
        <br />
        <div class="alert alert-danger" role="alert">
          <i class="fa fa-warning"></i>
          <%= devise_error_messages! %>
        </div>
      <% end %>

      <div class="form-group <% if resource.errors[:email] -%>has-error<% end %>">
        <%= f.email_field :email, autofocus: true, type: "text", class: "form-control", placeholder: t("faalis.email") %>
      </div>

      <% if resource.send(:password_required?) %>
        <div class="form-group <% if resource.errors[:password] -%>has-error<% end %>">
	  <%= f.password_field :password, class: "form-control", placeholder: t("faalis.password")%>
	</div>
        <div class="form-group <% if resource.errors[:password_confirmation] -%>has-error<% end %>">
	  <%= f.password_field :password_confirmation, class: "form-control", placeholder: t("faalis.confirm_password") %>
	</div>
      <% end %>
    </div>
    <div class="footer">

      <div class="submit"><%= f.submit t("faalis.sign_up") , class: "btn bg-olive btn-block" %></div>
      <br /><br />
      <%= render "devise/shared/links" %>

    </div>
  <% end %>
  <%= render "devise/shared/omni_link" %>
</div>
