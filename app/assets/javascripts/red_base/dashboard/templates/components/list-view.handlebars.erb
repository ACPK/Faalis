  <ul>
    {{#unless model}}
    <li><%= _("There is not record") %></li>
    {{/unless}}
    {{#each record in model}}

    <li {{bind-attr class="record.is_selected:selected :pointer"}}>
      <i {{action "toggle_details" record}} {{bind-attr class="record.view_details:fa-rotate-90 :handle :fa :fa-angle-right"}}></i>
      <div class="title" {{ action "select_item" record}}> {{ __title__  record title-field}}</div>
      <div class="buttons text-right"><span><i class="fa fa-edit"></i></span> <span class="pointer delete-icon" {{ action 'delete' record}}><i class="fa fa-times"></i></span></div>
      <div {{bind-attr class="record.view_details:show_details:hide_details :details"}}>
        asdfsdf
        sdfsdf
        sdfsdfs
      </div>
    </li>
    {{/each}}
    <li></li>
  </ul>
