}


function debug(msg) {
    if ("debug" in window) {
        if (window.debug === true) {
            console.log(msg);
        }
    }
}





function show_error_queue(){
    if (ErrorQueue.length > 0) {
        error_message(window.ErrorQueue.join("<br/>"));
    }
}

