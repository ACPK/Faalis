
function redirect_to(target) {
  var dashboard_namespace = "<%= Faalis::Engine.dashboard_namespace.to_s %>";
  var uri = target.replace("/"+ dashboard_namespace + "/",
                           "/" + dashboard_namespace + "#/");

  console.log("Redirecting to: %s", uri);
  window.location.href = uri;
}

function big_random() {
