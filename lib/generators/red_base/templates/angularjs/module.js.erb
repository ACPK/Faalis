// <%= resource %> Module
var <%= resource %> = angular.module("<%= resource %>", ["ListView"]);

// <%= resource %> configuration section ---------------------------
<%= resource %>.config(["$routeProvider", function($routeProvider){

    // Add any route you need here
    $routeProvider.
        when("/<%= resource.underscore %>", {
            templateUrl: template("<%= resource.underscore %>/index"),
            controller: "<%= resource %>Controller"
        }).
        when("/<%= resource.underscore %>/new",{
            templateUrl: template("<%= resource.underscore %>/new"),
            controller: "Add<%= resource %>Controller"
        }).
        when("/<%= resource.underscore %>/:id/edit",{
            templateUrl: template("<%= resource.underscore %>/new"),
            controller: "Add<%= resource %>Controller"
        });

}]);

// <%= resource %> index controller -------------------------------------------------------
// This controller is responsible for list page (index)
<%= resource %>.controller("<%= resource %>Controller", ["$scope", "gettext", "Restangular",
                                      function($scope, gettext, API){

    // details_template is the address of template which should load for
    // each item details section
    $scope.details_template = template("<%= resource.underscore %>/details");

    // Buttons for top of the list-view
    $scope.buttons = [
        {
            title: gettext("New"),
            icon: "fa fa-plus",
            classes: "btn tiny green",
            route: "#<%= resource.underscore %>/new"

        }
    ];

    /*
     * On delete event handler - `items` is an array of objects to delete
     */
    $scope.on_delete = function(items){

        var query = [];
        items.forEach(function(item){
            query.push(item.id);
        });

        API.several("<%= resource.underscore %>", query).remove().then(function() {//.customDELETE("", {id: query.join(",")})

            query.forEach(function(x){
                $scope.groups = _.without($scope.groups, x);
            });

        });
    };

    API.all("<%= resource.underscore %>").getList().then(function(data){
        $scope.<%= resource.underscore %> = data;
    });

}]);
